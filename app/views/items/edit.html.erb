

<div className="form">
  <%=form_tag("/api/items/#{@item.id}/create") do%>
  <label>Name:</label>
  <input name="name" type="text" value=<%=@item.name%>/>
  <label>Price:</label>
  <input name="price" type="decimal" value=<%=@item.price%>/>
  <label>Description:</label>
  <textarea name="description" type="text" value=<%=@item.description%>></textarea>
  <label>Rate:</label>
  <input name="rate" type="range" min="1" max="10" value=<%=@item.rate%>/>
  <button>Save</button>
  <%end%>
</div>